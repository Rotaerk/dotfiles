Config {
  font = "xft:DejaVu Sans Book:size=12:antialias=true",
  bgColor = "black",
  fgColor = "grey",
  commands =
    [
      Run Weather "KTHV" [
        "-t", "<fc=#4682B4><tempF></fc>°F <skyCondition>"
      ] 36000,
      Run CoreTemp [ 
        "-t", "<core0>,<core1>,<core2>,<core3>,<core4>",
        "--Low", "70",
        "--High", "80",
        "--low", "darkgreen",
        "--normal", "darkorange",
        "--high", "darkred"
      ] 50,
      Run MultiCpu [
        "-t", "<total0>,<total1>,<total2>,<total3>,<total4>",
        "--Low", "50",
        "--High", "85",
        "--low", "darkgreen",
        "--normal", "darkorange",
        "--high", "darkred"
      ] 10,
      Run Memory [
        "-t", "<usedratio>%",
        "--Low", "20",
        "--High", "90",
        "--low", "darkgreen",
        "--normal", "darkorange",
        "--high", "darkred"
      ] 10,
      Run Date "%a %b %_d %l:%M" "date" 10,
      Run Kbd [
        ("us(dvorak)", "<fc=#4488FB>DV</fc>"),
        ("us", "<fc=#8B0000>US</fc>")
      ],
      Run StdinReader
    ],
  sepChar = "@",
  alignSep = "}{",
  template = "@StdinReader@ }{ CPU(%): @multicpu@ | CPU(°C): @coretemp@ | Mem: @memory@    <fc=#ee9a00>@date@</fc> | @KTHV@ || @kbd@"
}
